@inherits Umbraco.Web.Mvc.UmbracoViewPage<HPPlc.Models.Mailer.SubscriptionMailerModel>
@{
	Layout = null;
	var model = Model;
}
@if (model != null)
{
	<html>
	<head>
		<title></title>
		<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
		<style type="text/css">
			#Table_01 {
				width: 600px;
				background: #fff;
			}

			@@media only screen and (max-width:649px) {
				#Table_01 {
					width: 98% !important;
					background: #fff;
				}

				.sm_btn {
					width: 150px !important;
				}

				img {
					width: 100% !important;
				}

				.sm_img {
					width: auto !important;
				}
			}
		</style>

	</head>

	<body bgcolor="#FFFFFF" leftmargin="0" topmargin="0" marginwidth="0" marginheight="0">
		<table border="0" align="center" cellpadding="0" cellspacing="0" id="Table_01" width="650" style="border:#adadad 1px solid; ">
			<tr>
				<td align="center" valign="top"><a href="@Model.HeaderUrl" target="_blank"><img src="@Model.HeaderLogoUrl" alt="" /></a></td>
			</tr>
			<tr>
				<td height="30"></td>
			</tr>
			<tr>
				<td align="left" valign="top" style="padding:0px 30px;">
					<table width="100%" border="0" cellspacing="0" cellpadding="0">
						<tr>
							<td align="left" valign="top">
								<table width="100%" border="0" cellspacing="0" cellpadding="0" style="font-family:Arial, Helvetica, sans-serif; font-size:14px; line-height:19px; color:#323232; text-align:left;">
									<tr>
										<td>
											@Html.Raw(Model.Body)
										</td>
									</tr>
									@if (Model.VisitPrintCenterUrl != null)
									{
										<tr>
											<td align="center" valign="top">
												<a href="@Model.VisitPrintCenterUrl" target="_blank"><img src="@Model.VisitPrintCenterLogoUrl" alt="" class="sm_img" /></a>
											</td>
										</tr>
									}
								</table>
							</td>


						</tr>
					</table>
				</td>
			</tr>

			<tr>
				<td align="left" valign="top" style="background: #f0f0f1; padding: 15px 30px">
					<table width="100%" border="0" cellspacing="0" cellpadding="0" style="font-family:Arial, Helvetica, sans-serif; font-size:12px; line-height:19px; color:#6d6f70; text-align:left;">
						<tbody>
							@if (!String.IsNullOrEmpty(Model.PDFUrl))
							{
								<tr>
									<td align="center" valign="top" style="font-size: 18px">To view the invoice, <a href="@(!string.IsNullOrEmpty(Model.PDFUrl) ? Model.PDFUrl : "#")" style="color: #3fa9f5; text-decoration: none">click here</a></td>
								</tr>
							}
							<tr>
								<td align="left" valign="top">&nbsp;</td>
							</tr>
							<tr>
								<td>
									@Html.Raw(Model.Footer)
								</td>
							</tr>
							<tr>
								<td align="left" valign="top">&nbsp;</td>
							</tr>
						</tbody>
					</table>
				</td>
			</tr>
		</table>

	</body>
</html>

}