@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.HpEprint>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = "";
    var titleData = Model?.DescendantsOrSelf()?.OfType<HpEprint>()?.FirstOrDefault();
}

<link href="/common/css/app.css" rel="stylesheet" />
<link href="/common/css/responsive.css" rel="stylesheet" />

<div class="ovrlybox">
    <div class="popupbox" id="divForm">
        <span class="close"><img src="/common/images/close-btn.png" alt="close"></span>
        <div class="popupbox-inr">
            <div class="row">
                <p>@titleData.EnterFromTitle</p>
            </div>
            <div class="row">
                <input type="text" class="inputfild" id="fromemail" name="fromemail">
                <span class="error" id="fromRequired" style="display:none;">@titleData.FromRequired</span>
                <span class="error" id="fromFormat" style="display:none;">@titleData.FromEmailFormat</span>
            </div>
            <div class="row">
                <p>@titleData.EnterEprintTitle</p>
            </div>
            <div class="row">
                <input type="text" class="inputfild" id="eprintemail" name="eprintemail">
                <span class="error" id="eprintRequired" style="display:none;">@titleData.EPrintRequired</span>
                @*<span class="error" id="eprintFormat" style="display:none;">@titleData.EPrintEmailFormat</span>*@
                <span class="error" id="eprintHPFormat" style="display:none;">@titleData.EPrintEmailFormat</span>
            </div>
            <div class="row"><a href="javascript:void(0)" class="btn" id="btnSubmit">@titleData.SubmitButtonText</a></div>
        </div>
    </div>
    <div class="popupbox" id="Msg">
        <div class="popupbox-inr">
            <div class="row">
                <span class="success">Mail sent on your given Email Id.</span>
            </div>
        </div>
    </div>
    <div class="popupbox" id="FailMsg">
        <div class="popupbox-inr">
            <div class="row">
                <span class="error">Mail sent fail on your given Email Id.</span>
            </div>
        </div>
    </div>
</div>
<script src="/common/js/jquery.min.js" type="text/javascript"></script>
<script src="/MyScripts/eprint.js"></script>
